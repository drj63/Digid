<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".qr_code">

    <TextView
        android:id="@+id/qrheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="Enter email in scarletmail.rutgers.edu format to access Digital RUID"
        android:textAlignment="center"
        android:textColor="#B82121"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/generate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text= "Get Digital RU ID Code"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:layout_below="@id/qrheading"

        />

</RelativeLayout>